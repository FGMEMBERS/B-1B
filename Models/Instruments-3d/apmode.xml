 <!-- apmode button animations -->
 
 <animation>
	 <type>material</type>
	 <object-name>apmode_alt</object-name>
	 <emission>
		 <red>0.5</red>
		 <green>0.8</green>
		 <blue>0.5</blue>
		 <factor-prop>controls/switches/apmode/alt-hold</factor-prop>
	 </emission>
</animation>
 
