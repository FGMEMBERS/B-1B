<PropertyList>

<path>bombnav.ac</path>

<!--activate auto launch  -->
<animation>
	 <type>pick</type>
	 <object-name>bombnav_button.017</object-name>
	 <action>
		 <button>0</button>
		 <repeatable>true</repeatable>
		 <interval-sec>0.5</interval-sec>
		 <binding>
			 <command>property-toggle</command>
			 <property>armament/auto-release</property>
		 </binding>
		 <binding>
			      <command>nasal</command>
			      <script>weapons.release_timer()</script>
		 </binding>
	 </action>
</animation>
<animation>
	 <type>textranslate</type>
	 <object-name>bombnav_button.017</object-name>
	 <property>armament/auto-release</property>
	 <factor>0.038</factor>
         <step>1</step>
	 <axis>
		 <x>0.0</x>
		 <y>1.0</y>
		 <z>0.0</z>
	 </axis>
</animation>

<!--activate target data calculation  -->
<animation>
	 <type>pick</type>
	 <object-name>bombnav_button.021</object-name>
	 <action>
		 <button>0</button>
		 <repeatable>true</repeatable>
		 <interval-sec>0.5</interval-sec>
		 <binding>
			 <command>property-toggle</command>
			 <property>armament/x-to-target</property>
		 </binding>
		 <binding>
			      <command>nasal</command>
			      <script>weapons.target_data()</script>
		 </binding>
	 </action>
</animation>
<animation>
	 <type>textranslate</type>
	 <object-name>bombnav_button.021</object-name>
	 <property>armament/x-to-target</property>
	 <factor>0.038</factor>
         <step>1</step>
	 <axis>
		 <x>0.0</x>
		 <y>1.0</y>
		 <z>0.0</z>
	 </axis>
</animation>



