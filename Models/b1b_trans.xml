 <!-- wing contrails -->
 
 <animation>
	 <type>select</type>
	 <object-name>wing_contr_l</object-name>
	 <object-name>wing_contr_r</object-name>
	 <condition>
		 <and>
		  <greater-than>
			 <property>environment/relative-humidity</property>
			 <value>50.0</value>
		  </greater-than>
		  <equals>
			  <property>controls/flight/wing-sweep</property>
			  <value>1.0</value>
		  </equals>
		  <greater-than>
			  <property>velocities/mach</property>
			  <value>0.2</value>
		  </greater-than>
		  <greater-than>
			  <property>orientation/pitch-deg</property>
			  <value>1.0</value>
		  </greater-than>
	 	</and>
	 </condition>
  </animation>
  
  <animation>
	  <type>blend</type>
	  <object-name>wing_contr_l</object-name>
	  <property>orientation/pitch-deg</property>
	  <offset>1.0</offset>
	  <factor>-0.05</factor>
 </animation>
 
 <animation>
	 <type>blend</type>
	 <object-name>wing_contr_r</object-name>
	 <property>orientation/pitch-deg</property>
	 <offset>1.0</offset>
	 <factor>-0.05</factor>
 </animation>
 
  <animation>
	 <type>select</type>
	 <object-name>bone_rain</object-name>
	 <condition>
	   <and>
	      <equals>
		      <property>environment/rain/above_clouds</property>
		      <value>0</value>
	      </equals>
	       <or>
		 <greater-than>
			 <property>environment/metar/rain-norm</property>
			 <value>0.2</value>
		 </greater-than>
		 <greater-than>
			 <property>environment/metar/snow-norm</property>
			 <value>0.2</value>
		 </greater-than>
	        </or>
	    </and>
	 </condition>
  </animation>
 
 <animation>
	 <type>textranslate</type>
	 <object-name>bone_rain</object-name>
	 <property>environment/rain/rain</property>
	 <factor>0.1</factor>
	 <step>1</step>
	 <axis>
		 <x>0</x>
		 <y>1</y>
		 <z>0</z>
	 </axis>
 </animation>
 
