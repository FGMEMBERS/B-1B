<!--  B-1B lancer yasim config
      
      B-1B with full fuel load, no weapon load: takeoff weight approx. 389000lb
      typical: 389000 including up to 60000lb weapon load (internal) (max. 477000lb)

-->
<airplane mass="192000">

<!-- Approach configuration -->
  <approach speed="160" aoa="3.0" fuel="0.7">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.25"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.25"/>
    <control-setting axis="/controls/engines/engine[2]/throttle" value="0.25"/>
    <control-setting axis="/controls/engines/engine[3]/throttle" value="0.25"/>
    <control-setting axis="/controls/engines/engine[0]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[1]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[2]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[3]/afterburner" value="0.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
    <control-setting axis="/controls/flight/spoilers" value="0.0"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <control-setting axis="/controls/flight/wing-sweep" value="1.0"/>
  </approach>

<!-- Cruise configuration -->
<!-- I found the following performance figures

     1000 mph (869 kt) @ 36000 ft
     647 mph (562 kt) cruise speed
     750 mph (652 kt) @ sea level
     Rotate and Takeoff Speeds:	 210 Gross - 119 Rotate kts / 134 kts Takeoff
                                 390 Gross - 168 kts Rotate / 183 kts Takeoff
     Landing Speeds: 	210 Gross - 145 kts
                        380 Gross - 195 kts
     
-->
  <cruise speed="582" alt="36000" fuel="0.6">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.6"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.6"/>
    <control-setting axis="/controls/engines/engine[2]/throttle" value="0.6"/>
    <control-setting axis="/controls/engines/engine[3]/throttle" value="0.6"/>
    <control-setting axis="/controls/engines/engine[0]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[1]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[2]/afterburner" value="0.0"/>
    <control-setting axis="/controls/engines/engine[3]/afterburner" value="0.0"/>
    <control-setting axis="/controls/flight/flaps" value="0"/>
    <control-setting axis="/controls/flight/spoilers" value="0.0"/>
    <control-setting axis="/controls/gear/gear-down" value="0.0"/>
    <control-setting axis="/controls/flight/wing-sweep" value="0.25"/>
  </cruise>

  <cockpit x="-6.3" y="0.0" z="1.8"/>

  <!-- the 3 fuselages below are used for body/engines-->
  <fuselage ax="0" ay="0" az="0" bx="-44.50" by="0" bz="0"
            width="2.8" taper="0.15" midpoint="0.60"/>
  <fuselage ax="-25" ay="3.8" az="-2.4" bx="-35.0" by="3.8" bz="-2.4"
            width="1.0" taper="0.15" midpoint="0.60"/>
  <fuselage ax="-25" ay="-3.8" az="-2.4" bx="-35.0" by="3.8" bz="-2.4"
            width="1.0" taper="0.15" midpoint="0.60"/>


  <wing x="-26.2" y="5.0" z="-2.2" taper="0.25" incidence="1" twist="-2"
        length="14.8" chord="6.1" sweep="55.0" dihedral="2.0">
    <stall aoa="20.0" width="4" peak="1.4"/>
    <flap0 start="0.6" end="0.90" lift="1.5" drag="1.1"/>
    <spoiler start="0.1" end="0.6" lift="1.0" drag="2.4"/>
    
    <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
    <control-input axis="/controls/flight/spoilers" control="SPOILER"/>
    <control-output control="SPOILER" prop="/surface-positions/spoilers-pos-norm"/>

    <!--<control-output control="FLAP1" side="left" prop="/surface-positions/rudder-pos-norm"/>
    <control-output control="FLAP1" side="right" prop="/surface-positions/rudder-pos-norm"/>
    <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>-->
    <!--  <control-output control="SPOILER" side="left" prop="/surface-positions/right-aileron-pos-norm"/>
    <control-output control="SPOILER" side="right" prop="/surface-positions/right-spoiler-pos-norm"/>-->

    <control-speed control="FLAP0" transition-time="0.5"/>
    <control-speed control="SPOILER" transition-time="1.5"/>
  </wing>
  
  <!-- blended wing body -->
  
  <mstab x="-24.0" y="2.0" z="-2.2" taper="0.4" incidence="1"
	 length="3.0" chord="15.0" sweep="-15.0" dihedral="1.0">
	  <stall aoa="18.0" width="4" peak="1.5"/>
	  
	  <flap0 start="0.0" end="0.5" lift="1.4" drag="1.4"/>
	  <flap1 start="0.5" end="1.0" lift="1.22" drag="1.1"/><!-- wingsweep 15/25/45/55 -->
	  
	  <control-input axis="/controls/flight/wing-sweep" control="FLAP1"/>
	  <control-input axis="/controls/flight/flaps" control="FLAP0"/>
	  <control-output control="FLAP1" prop="/surface-positions/wing-sweep-pos-norm"/>

	  <control-speed control="FLAP1" transition-time="8"/>
  </mstab>

<!-- Elevator -->
  <hstab x="-39.0" y="0.3" z="3.1" taper="0.38"  incidence="0"
         length="7.0" chord="5.0" sweep="15.0" dihedral="0.0">
    <stall aoa="20.0" width="5" peak="1.5"/>
    <flap0 start="0.0" end="1" lift="1.7" drag="1.5"/>

    <control-input axis="/controls/flight/elevator" control="FLAP0"/>
    <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
     <!--<control-input axis="/controls/flight/elevator-incidence-deg" src0="-1" src1="1" dst0="-4" dst1="9" control="INCIDENCE"/>-->

    <control-output control="FLAP0" prop="/surface-positions/right-elevator-pos-norm"/>
    <control-output control="FLAP0" prop="/surface-positions/left-elevator-pos-norm"/>
    <!-- <control-output control="INCIDENCE" prop="/surface-positions/elevator-incidence-deg"/>-->

    <control-speed control="FLAP0" transition-time="1.0"/>
    <control-speed control="INCIDENCE" transition-time="0.05"/>
  </hstab>

  <vstab x="-38.0" y="0" z="2.6" taper="0.3" effectiveness="0.5"
	 length="6.4" chord="5.5" sweep="-20.0">
	  <stall aoa="25.0" width="5" peak="1.5"/>
	  
	  <flap0 start="0.0" end="1.0" lift="1.1" drag="1.1"/>

	  <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
	  <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
	  <control-output control="SPOILER" prop="/surface-positions/spoilers-pos-norm"/>
	  <control-speed control="FLAP0" transition-time="1.5"/>
  </vstab>
  
  <!-- fwd canard wings -->
  
  <mstab x="-5.0" y="2.0" z="-0.5" taper="0.2" incidence="0"
	 length="0.9" chord="0.7" sweep="-28.0" dihedral="-30.0">
	  <stall aoa="18.0" width="4" peak="1.5"/>
	  
	  <!--<flap0 start="0.0" end="1.0" lift="1.2" drag="1.1"/>
	  
	  <control-input axis="/controls/flight/elevator" control="FLAP0"/>
	  <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
	  <control-speed control="FLAP0" transition-time="0.5"/>-->
  </mstab>

<!-- engines are rated 14600lb each (4x) -->

<!-- left wing engines original - tsfc=0.67, but recalculated to meet range/fuel load data (>6000nm/160000lb) -->

<jet x="-30.3" y="4.2" z="-2.5" mass="3200" tsfc="0.6" thrust="14600" afterburner="30700">
	<actionpt x="-35.6" y="4.2" z="-2.4"/>
	<control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
	<control-input axis="/controls/engines/engine[0]/afterburner" control="REHEAT"/>
</jet>

<jet x="-30.3" y="3.2" z="-2.5" mass="3200" tsfc="0.6" thrust="14600" afterburner="30700">
	<actionpt x="-35.6" y="3.2" z="-2.4"/>
	<control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
	<control-input axis="/controls/engines/engine[0]/afterburner" control="REHEAT"/>
</jet>

<!-- right wing engines -->

<jet x="-30.3" y="-3.2" z="-2.5" mass="3200" tsfc="0.6" thrust="14600" afterburner="30700">
	<actionpt x="-35.6" y="-3.2" z="-2.4"/>
	<control-input axis="/controls/engines/engine[2]/throttle" control="THROTTLE"/>
	<control-input axis="/controls/engines/engine[0]/afterburner" control="REHEAT"/>
</jet>

<jet x="-30.3" y="-4.2" z="-2.5" mass="3200" tsfc="0.6" thrust="14600" afterburner="30700">
	<actionpt x="-35.6" y="-4.2" z="-2.4"/>
	<control-input axis="/controls/engines/engine[3]/throttle" control="THROTTLE"/>
	<control-input axis="/controls/engines/engine[0]/afterburner" control="REHEAT"/>
  </jet>

<!-- Landing Gear -->
<!-- front -->
  <gear x="-8.4" y="0.0" z="-4.20" retract-time="8" compression="1.0" spring="1.3">
    <control-input axis="/controls/flight/rudder" control="STEER" square="true"/>
    <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
    <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
    <control-speed control="EXTEND" transition-time="8"/>
    <control-speed control="BRAKE" transition-time="0.5"/>
    <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>


<!-- rear left -->
  <gear x="-27.5" y="2.9" z="-4.0" retract-time="8" compression="0.9" spring="1.2">
    <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
    <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
    <control-speed control="EXTEND" transition-time="8"/>
    <control-speed control="BRAKE" transition-time="0.5"/>
    <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

<!-- rear right -->
  <gear x="-27.5" y="-2.9" z="-4.0" retract-time="8" compression="0.9" spring="1.2">
    <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
    <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
    <control-speed control="EXTEND" transition-time="8"/>
    <control-speed control="BRAKE" transition-time="0.5"/>
    <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
  </gear>
  
  <!-- Canopy / Cockpit access behind front gear
  <gear x="-5.0" y="0.0" z="0.0" retract-time="6" compression="0.6">
	  <control-input axis="/controls/gear/brake-parking" control="EXTEND"/>
	  <control-speed control="EXTEND" transition-time="6"/>
	  <control-output control="EXTEND" prop="/canopy/position-norm"/>
  </gear>-->
  


<!-- 6 fuel tanks with total 190000 lb -->
<!-- approximate positions
     -->
  <tank x="-26.6" y="4.0" z="-0.5" capacity="30000"/>
  <tank x="-26.6" y="-4.0" z="-0.5" capacity="30000"/>
  <tank x="-8.0" y="0.0" z="-0.5" capacity="30000"/>
  <tank x="-14.0" y="0.0" z="-0.5" capacity="40000"/>
  <tank x="-32.0" y="0.0" z="-0.5" capacity="20000"/>
  <tank x="-39.0" y="0.0" z="-0.5" capacity="40000"/>


<!-- ballast used to trim the aircraft -->
<ballast x="-44.0" y="0" z="0" mass="-15000"/>
<ballast x="-5.0" y="0" z="1.5" mass="10000"/>

</airplane>
